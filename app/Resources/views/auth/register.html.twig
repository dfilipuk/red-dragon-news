{% extends 'base.html.twig' %}

{% block title %}
    Registration
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="{{ asset('public/img/logo.png') }}" class="auth-logo">
            </div>
            <div class="col-sm-4 col-sm-offset-4">
                <div class="card-square mdl-card mdl-shadow--2dp ">
                    <div class="mdl-card__title mdl-card--expand mdl-card--border row second-color">
                        <div class="col-sm-9">
                            <h2 class="mdl-card__title-text">Hello, stranger</h2>
                        </div>
                        <div class="col-sm-3">
                            <a href={{ path('signin') }}>
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect col-sm-12">Sign in</button>
                            </a>
                        </div>

                    </div>
                    <form action="#">
                        <div class="row auth-inputs margin-escape">
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="email" id="e-mail">
                                    <label class="mdl-textfield__label" for="e-mail">E-mail</label>
                                </div>
                            </div>
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="password" id="password">
                                    <label class="mdl-textfield__label" for="password">Password</label>
                                </div>
                            </div>
                            <div class="col-sm-6 col-sm-offset-3">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="password" id="password-rep">
                                    <label class="mdl-textfield__label" for="password-rep">Repeat password</label>
                                </div>
                            </div>
                        </div>

                        <div class="mdl-card__actions row margin-escape">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect col-sm-12 margin-bottom-20">Sign up</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

