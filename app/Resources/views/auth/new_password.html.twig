{% extends 'base_auth.html.twig' %}

{% block title %}
    Reset password
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="{{ asset('public/img/logo.png') }}" class="auth-logo">
            </div>
            <div class="col-sm-4 col-sm-offset-4">
                <div class="card-square mdl-card mdl-shadow--2dp ">
                    <div class="mdl-card__title mdl-card--expand mdl-card--border row second-color">
                        <div class="col-sm-9">
                            <h2 class="mdl-card__title-text">Enter new password</h2>
                        </div>
                        <div class="col-sm-3">
                            <a href={{ path('sign_in') }}>
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect col-sm-12">Sign in</button>
                            </a>
                        </div>

                    </div>
                    {{ form_start(form) }}
                    <div class="row auth-inputs margin-escape">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                {{
                                form_widget(form.plainPassword.first, {'attr': {
                                    'class': 'mdl-textfield__input',
                                    'id': 'password'
                                }})
                                }}
                                <label class="mdl-textfield__label" for="password">Password</label>
                            </div>
                        </div>
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                {{
                                form_widget(form.plainPassword.second, {'attr': {
                                    'class': 'mdl-textfield__input',
                                    'id': 'password-rep'
                                }})
                                }}
                                <label class="mdl-textfield__label" for="password-rep">Repeat password</label>
                            </div>
                        </div>
                    </div>

                    <div class="mdl-card__actions row margin-escape">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect col-sm-12 margin-bottom-20">Change</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
                {% for error in errors %}
                    <h6 class="text-center alert alert-danger">{{ error.getMessage() }}</h6>
                {% endfor%}
            </div>
        </div>
    </div>
{% endblock %}

