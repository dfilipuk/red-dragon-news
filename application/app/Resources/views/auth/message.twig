{% extends 'base_auth.html.twig' %}

{% block title %}
    {{ 'auth.message.title'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center">
                <img src="{{ asset('public/img/logo.png') }}" class="auth-logo">
            </div>

            <div class="col-sm-4 col-sm-offset-4">
                <div class="card-square mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card--expand mdl-card--border row first-color">
                        <div class="col-sm-9">
                            <h2 class="mdl-card__title-text">{{ title|trans }}</h2>
                        </div>
                        <div class="col-sm-3">
                            <a href={{ path('sign_in') }}>
                                <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect col-sm-12">{{ 'auth.login.sugnin.button'|trans }}</button>
                            </a>
                        </div>
                    </div>
                    <h6 class="text-center">
                        {{ include(message_template, {'params': params}) }}
                    </h6>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

