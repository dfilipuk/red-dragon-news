{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'admin.category.new.title'|trans }}{% endblock %}

{% block admin_title %}{{ 'admin.category.new.title'|trans }}{% endblock %}

{% block body %}
    <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid admin-content">
            <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
                <div  class="mdl-cell mdl-cell--12-col">
                    {% for error in errors %}
                        <h6 class="text-center alert alert-danger mdl-cell mdl-cell--6-col mdl-cell--3-offset">{{ error.getMessage() }}</h6>
                    {% endfor%}
                    {{ form_start(form) }}
                    <div class="row auth-inputs margin-escape">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                {{
                                form_widget(form.name, {'attr': {
                                    'class': 'mdl-textfield__input',
                                    'id': 'name'
                                }})
                                }}
                                <label class="mdl-textfield__label " for="name">{{ 'admin.category.new.categoty.name.label'|trans }}</label>
                            </div>
                        </div>
                    </div>

                    <div class="row auth-inputs margin-escape">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <div id="parent-name-input" class="search">
                                {{
                                form_widget(form.parentName, {'attr': {
                                    'class': 'mdl-textfield__input',
                                    'id': 'parent-name'
                                }})
                                }}
                                </div>
                                <label class="mdl-textfield__label " for="parent-name">{{ 'admin.category.new.parent.category.label'|trans }}</label>
                            </div>
                        </div>
                    </div>

                    <div>
                        <ul id="similar-categories">

                        </ul>
                    </div>

                    <div class="row auth-inputs margin-escape">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="mdl-checkbox">
                                {{
                                form_widget(form.isRootCategory, {'attr': {
                                    'class': 'mdl-checkbox__input',
                                    'id': 'root-category'
                                }})
                                }}
                                <label class="mdl-checkbox__label" for="root-category">{{ 'admin.category.new.root.category.label'|trans }}</label>
                            </div>
                        </div>
                    </div>

                    <div class="mdl-card__actions row margin-escape">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect col-sm-12 margin-bottom-20">{{ 'admin.category.new.create.label'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>

            </div>

        </div>
    </main>
{% endblock %}
{% block javascript %}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        var dataUrl = '{{ path('ajax_similar_categories', {'level': 2}) }}';
        var searchInput = $('.search').children("input").attr("id");
    </script>
    <script type="text/javascript"  src="{{ asset('public/js/ajax-category-loader.js') }}"></script>
{% endblock %}